<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="signupVM" type="com.nomisapplication.app.modules.signup.data.viewmodel.SignupVM"/>
    </data>
    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearSignup"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <LinearLayout android:id="@+id/linearColumnrectangleten"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStylecyan_200">
            <View android:background="@color/gray_100"
                android:id="@+id/viewRectangleTen"
                android:layout_gravity="start"
                android:layout_height="@dimen/_10pxv" android:layout_width="@dimen/_414pxh"/>
            <LinearLayout android:gravity="end"
                android:id="@+id/linearRowarrowleft"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_28pxv"
                android:layout_marginEnd="@dimen/_11pxh"
                android:layout_marginStart="@dimen/_11pxh"
                android:layout_marginTop="@dimen/_33pxv"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/imageArrowleft"
                    android:layout_height="@dimen/_15pxh"
                    android:layout_marginBottom="@dimen/_17pxv"
                    android:layout_marginTop="@dimen/_16pxv"
                    android:layout_width="@dimen/_15pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_arrowleft"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_arrowleft"/>
                <LinearLayout android:id="@+id/linearRowvector"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_62pxh"
                    android:layout_weight="0.95"
                    android:layout_width="0dp" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageVector"
                        android:layout_height="@dimen/_49pxh"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:layout_width="@dimen/_64pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_vector"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_vector"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtRegisteration"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8pxh"
                        android:layout_marginTop="@dimen/_6pxv"
                        android:layout_weight="0.77"
                        android:layout_width="0dp"
                        android:singleLine="true"
                        android:text="@{signupVM.signupModel.txtRegisteration}"
                        style="@style/txtRobotobold36" tools:text="@string/lbl_registeration"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView android:ellipsize="end" android:id="@+id/txtFirstName"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_26pxh"
            android:layout_marginStart="@dimen/_26pxh"
            android:layout_marginTop="@dimen/_20pxv"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@{signupVM.signupModel.txtFirstName}"
            style="@style/txtRobotobold24" tools:text="@string/lbl_first_name"/>
        <View android:background="@color/purple_100"
            android:id="@+id/viewRectangleThirty"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_33pxv"
            android:layout_marginEnd="@dimen/_26pxh"
            android:layout_marginStart="@dimen/_26pxh"
            android:layout_marginTop="@dimen/_7pxv" android:layout_width="@dimen/_362pxh"/>
        <TextView android:ellipsize="end" android:id="@+id/txtLastName"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_26pxh"
            android:layout_marginStart="@dimen/_26pxh"
            android:layout_marginTop="@dimen/_9pxv"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@{signupVM.signupModel.txtLastName}"
            style="@style/txtRobotobold24" tools:text="@string/lbl_last_name"/>
        <View android:background="@color/purple_100"
            android:id="@+id/viewRectangleThirtyFive"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_33pxv"
            android:layout_marginEnd="@dimen/_26pxh"
            android:layout_marginStart="@dimen/_26pxh"
            android:layout_marginTop="@dimen/_6pxv" android:layout_width="@dimen/_362pxh"/>
        <TextView android:ellipsize="end"
            android:id="@+id/txtEmailAddress"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_26pxh"
            android:layout_marginStart="@dimen/_26pxh"
            android:layout_marginTop="@dimen/_12pxv"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@{signupVM.signupModel.txtEmailAddress}"
            style="@style/txtRobotobold24" tools:text="@string/lbl_email_address"/>
        <View android:background="@color/purple_100"
            android:id="@+id/viewRectangleThirtySix"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_33pxv"
            android:layout_marginEnd="@dimen/_26pxh"
            android:layout_marginStart="@dimen/_26pxh"
            android:layout_marginTop="@dimen/_7pxv" android:layout_width="@dimen/_362pxh"/>
        <TextView android:ellipsize="end" android:id="@+id/txtPassword"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_26pxh"
            android:layout_marginStart="@dimen/_26pxh"
            android:layout_marginTop="@dimen/_10pxv"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@{signupVM.signupModel.txtPassword}"
            style="@style/txtRobotobold24" tools:text="@string/lbl_password"/>
        <View android:background="@color/purple_100"
            android:id="@+id/viewRectangleThirtySeven"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_33pxv"
            android:layout_marginEnd="@dimen/_26pxh"
            android:layout_marginStart="@dimen/_26pxh"
            android:layout_marginTop="@dimen/_7pxv" android:layout_width="@dimen/_362pxh"/>
        <TextView android:ellipsize="end"
            android:id="@+id/txtConfirmPasswor"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_26pxh"
            android:layout_marginStart="@dimen/_26pxh"
            android:layout_marginTop="@dimen/_11pxv"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@{signupVM.signupModel.txtConfirmPasswor}"
            style="@style/txtRobotobold24" tools:text="@string/msg_confirm_passwor"/>
        <View android:background="@color/purple_100"
            android:id="@+id/viewRectangleThirtyEight"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_33pxv"
            android:layout_marginEnd="@dimen/_26pxh"
            android:layout_marginStart="@dimen/_26pxh"
            android:layout_marginTop="@dimen/_7pxv" android:layout_width="@dimen/_362pxh"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignup"
            style="@style/btnSolidRounded"
            android:layout_width="@dimen/_167pxh"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_26pxh"
            android:layout_marginTop="@dimen/_45pxv"
            android:layout_marginEnd="@dimen/_26pxh"
            android:layout_marginBottom="@dimen/_20pxv"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_20pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingBottom="@dimen/_20pxv"
            android:singleLine="true"
            android:text="@string/lbl_signup"
            android:textAllCaps="false"
            tools:text="@string/lbl_signup" />
    </LinearLayout>
</layout>
